{
  "name": "vue-functional-ref",
  "version": "0.0.1",
  "packageManager": "pnpm@7.9.5",
  "description": "Functional-style refs for Vue",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.json,.md",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "test": "vitest",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@sxzz/eslint-config-prettier": "^2.4.1",
    "@sxzz/eslint-config-ts": "^2.4.1",
    "@types/node": "*",
    "bumpp": "^8.2.1",
    "eslint": "^8.23.0",
    "eslint-define-config": "^1.6.0",
    "prettier": "^2.7.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "vitest": "^0.22.1",
    "vue": "^3.2.37"
  },
  "engines": {
    "node": ">=14.19.0"
  }
}
