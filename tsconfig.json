{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2022"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "node",
    "paths": {
      "@vue/reactivity": ["./types.d.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
